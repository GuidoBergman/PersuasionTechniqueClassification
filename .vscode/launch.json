            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--action", "load_data"]
        },
        {
            "name": "Load Data (isolated)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/data/loader.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Train Classifier",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--action", "train_classifier"]
        },
        {
            "name": "Train Classifier (Weighted)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--action", "train_classifier","--weighted"]
        },
        {
            "name": "Evaluate Classifier",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--action", "eval_classifier"]
        },
        {
            "name": "Train Generator",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
